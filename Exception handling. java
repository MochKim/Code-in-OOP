import java.util.Scanner;

enum Day {
    MONDAY, TUESDAY, WEDNESDAY, THURSDAY, FRIDAY, SATURDAY, SUNDAY
}

public class Main {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter a day of the week: ");
        String input = scanner.nextLine().toUpperCase();  // convert to uppercase

        try {
            Day today = Day.valueOf(input);  // may throw IllegalArgumentException
            System.out.println("Today is: " + today);
        } catch (IllegalArgumentException e) {
            System.out.println("Oops! '" + input + "' is not a valid day of the week.");
        } finally {
            System.out.println("Execution completed. Thank you!");
        }

        scanner.close();
    }
}
